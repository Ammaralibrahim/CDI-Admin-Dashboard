  <section class="home-section">
    <div class="home-content">
      <i class='bx bx-menu' ></i>
      <span class="text">CDI | Home</span>

    </div>


    <section class="main">
      <div class="main-div">
        <h4>
          Communication Design Ideas (CDI) is a multi-disciplinary,
          independently owned design studio based in Istanbul / Berlin.
          <br /><br />
          With our interdisciplinary work system and a customer portfolio
          ranging from independent founders to established brands, we provide
          services to all interaction areas that make up the experiences of
          brands.
        </h4>

        <a class="works" href="/works">Works</a>
      </div>
    </section>



    <section class="projects" id="projects">
      <a href="/create-post"><button class="add-new-work-btn">+ Add New Work</button></a>
      <div class="content">
        <% arrArticle.forEach(item=> { %>

        <div class="project-card">
          <div class="project-image">
            <img src="images/work1.png" />
          </div>
          <div class="project-info">
            <p class="project-category">
              <%= item.title %>
            </p>
            <strong class="project-title">
              <span><%= item.summary %></span>
            </strong>
            <p class="project-category2">
              <%= item.body %>
            </p>
            <a href="">See the project</a><br><br><br>
            <form method="POST" action="/delete-post/<%= item._id %>">
              <button type="submit">delete</button>
            </form>
          </div>
        </div>
        <% }); %>
      </div>


    </section>
  </section>
  <script>
  let arrow = document.querySelectorAll(".arrow");
  for (var i = 0; i < arrow.length; i++) {
    arrow[i].addEventListener("click", (e)=>{
   let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
   arrowParent.classList.toggle("showMenu");
    });
  }
  let sidebar = document.querySelector(".sidebar");
  let sidebarBtn = document.querySelector(".bx-menu");
  console.log(sidebarBtn);
  sidebarBtn.addEventListener("click", ()=>{
    sidebar.classList.toggle("close");
  });
  </script>
